
<% var title = 'Create Example' %>
<% include head %>

<div class="container-fluid mt-4">
    <div class="row">
        <div class="col-md-10">
            <form action="/" method="get">
                <div class="input-group">
                    <input type="text" class="form-control" name="search" value="#">
                    <div class="input-group-append">
                        <button class="btn btn-outline-secondary">ค้นหา</button>
                    </div>
                </div>
            </form>
        </div>
        <div class="col-md-2">
            <div class="d-flex justify-content-end bd-highlight mb-3">
                <div class="p-2 btn btn-outline-secondary"><a href="/create">เพิ่ม</a></div>
            </div>
        </div>
    </div>
    <div class="row">
<!--         @if(!$books->isEmpty())-->
<!--         @foreach($books as $book)-->
        <% mascots.forEach(function(mascot) { %>
        <div class="col-md-3">
            <div class="card mt-2">
                <div class="card-body ">
                    <h5 class="card-title"><%= mascot.book_name %></h5>
                    <p class="card-text">เขียนโดย : <%= mascot.author %><br>ราคา : <%= mascot.price %> บาท </p>
                    <button type="button" class="btn btn-outline-secondary m-1" onclick="location.href='/change/<%= mascot.id %>';">Change</button>
                    <button type="button" class="btn btn-outline-danger m-1" onclick="location.href='/api/delete-data/<%= mascot.id %>';">Delete</button>
                    <button type="button" class="btn btn-primary w-100 m-1 mt-3" @click="">Buy</button>

                </div>
            </div>
        </div>
        <% }); %>
<!--        @endforeach-->
<!--        @endif-->
    </div>
</div>

